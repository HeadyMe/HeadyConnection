{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PoPS Oracle Telemetry",
  "type": "object",
  "required": ["event_id", "source_id", "timestamp", "metrics", "signature"],
  "properties": {
    "event_id": { "type": "string", "minLength": 3 },
    "source_id": { "type": "string", "minLength": 3 },
    "timestamp": { "type": "string", "format": "date-time" },
    "metrics": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "number" }
    },
    "signature": { "type": "string", "minLength": 16 }
  },
  "additionalProperties": false
}
